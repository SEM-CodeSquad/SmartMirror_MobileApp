<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#595959"
    android:weightSum="1"
    android:clickable="true"
    android:focusableInTouchMode="true">

    <TextView
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Email"
        android:id="@+id/textView7"
        android:layout_gravity="center_horizontal"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/loginuser"
        android:layout_alignEnd="@+id/loginuser"
        android:layout_marginTop="200dp"
        android:layout_width="200dp"
        android:textColor="@color/common_google_signin_btn_text_dark_focused" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New to Postits? Register"
        android:clickable="false"
        android:layout_below="@+id/fgtpass"
        android:layout_alignLeft="@+id/fgtpass"
        android:layout_alignStart="@+id/fgtpass"
        android:layout_marginTop="10dp"
        android:id="@+id/textView6"
        android:textColor="@color/common_google_signin_btn_text_dark_focused" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Here"
        android:id="@+id/regibtn"
        android:layout_alignTop="@+id/textView6"
        android:layout_alignRight="@+id/login"
        android:layout_alignEnd="@+id/login"
        android:layout_toRightOf="@+id/textView6"
        android:layout_toEndOf="@+id/textView6"
        android:layout_marginLeft="5dp"
        android:textStyle="bold|italic"
        android:clickable="true"
        android:textColor="@color/common_google_signin_btn_text_dark_focused" />

    <Button
        style="@style/BtnCustomHolo"
        android:layout_width="216dp"
        android:layout_height="wrap_content"
        android:text="Login"
        android:id="@+id/login"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/loginpassword"
        android:layout_alignRight="@+id/loginpassword"
        android:layout_alignEnd="@+id/loginpassword"
        android:focusableInTouchMode="false"
        android:textColor="@color/common_google_signin_btn_text_dark_focused"
        android:layout_alignStart="@+id/loginpassword" />

    <TextView
        android:layout_width="206dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Password"
        android:id="@+id/edittext5"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/loginuser"
        android:layout_alignLeft="@+id/textView7"
        android:layout_alignStart="@+id/textView7"
        android:textColor="@color/common_google_signin_btn_text_dark_focused" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Forgot your password?"
        android:id="@+id/fgtpass"
        android:layout_gravity="right"
        android:clickable="true"
        android:layout_below="@+id/login"
        android:layout_alignLeft="@+id/login"
        android:layout_alignStart="@+id/login"
        android:textColor="@color/common_google_signin_btn_text_dark_focused" />

    <EditText
        android:layout_width="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/loginuser"
        android:layout_gravity="center_horizontal"
        style="@style/EditTextCustomHolo"
        android:layout_below="@+id/textView7"
        android:layout_centerHorizontal="true"
        android:layout_height="48dp" />

    <EditText
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/loginpassword"
        android:layout_gravity="center_horizontal"
        style="@style/EditTextCustomHolo"
        android:layout_width="230dp"
        android:layout_below="@+id/edittext5"
        android:layout_alignLeft="@+id/loginuser"
        android:layout_alignStart="@+id/loginuser"
        android:layout_alignRight="@+id/loginuser"
        android:layout_alignEnd="@+id/loginuser"
        android:layout_height="48dp" />

</RelativeLayout>