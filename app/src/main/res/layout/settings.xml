<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent" android:layout_height="fill_parent">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:src="@drawable/qrcode"
        android:layout_below="@+id/usrbtn"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="16dp"
        android:editable="false"
        android:clickable="false"
        android:focusable="false"/>

    <ImageView
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:id="@+id/imageView2"
        android:src="@drawable/news"
        android:layout_below="@+id/imageView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignBottom="@+id/newsbtn"
        android:layout_marginLeft="16dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="No Chosen News"
        android:ems="10"
        android:id="@+id/newstext"
        android:background="@android:color/transparent"
        android:editable="false"
        android:clickable="false"
        android:focusable="false"
        android:layout_alignLeft="@+id/mirrortext"
        android:layout_alignStart="@+id/mirrortext"
        android:layout_below="@+id/mirrorbtn"
        android:layout_alignRight="@+id/newsbtn"
        android:layout_alignEnd="@+id/newsbtn" />

    <ImageView
        android:layout_width="45dp"
        android:layout_height="wrap_content"
        android:id="@+id/busimage"
        android:src="@drawable/bus"
        android:background="@android:color/transparent"
        android:layout_alignTop="@+id/bustext"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="16dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="No Chosen City"
        android:ems="10"
        android:id="@+id/citytext"
        android:background="@android:color/transparent"
        android:editable="false"
        android:clickable="false"
        android:focusable="false"
        android:layout_alignTop="@+id/imageView4"
        android:layout_alignLeft="@+id/bustext"
        android:layout_alignStart="@+id/bustext"
        android:layout_alignRight="@+id/weatherchange"
        android:layout_alignEnd="@+id/weatherchange" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView4"
        android:src="@drawable/weather"
        android:background="@android:color/transparent"
        android:layout_below="@+id/busbtn"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="16dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="No Chosen Stop"
        android:ems="10"
        android:id="@+id/bustext"
        android:background="@android:color/transparent"
        android:editable="false"
        android:clickable="false"
        android:focusable="false"
        android:layout_below="@+id/newsbtn"
        android:layout_alignLeft="@+id/newstext"
        android:layout_alignStart="@+id/newstext"
        android:layout_alignRight="@+id/busbtn"
        android:layout_alignEnd="@+id/busbtn" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/weatherchange"
        android:text="           Change Weather City"
        android:layout_below="@+id/citytext"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:editable="false"
        android:clickable="true"
        android:inputType="textNoSuggestions"
        android:focusable="false" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/busbtn"
        android:text="           Change Bus Stop"
        android:layout_below="@+id/bustext"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:clickable="true"
        android:editable="false"
        android:inputType="textNoSuggestions"
        android:focusable="false"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/newsbtn"
        android:text="           Change News"
        android:layout_below="@+id/newstext"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:clickable="true"
        android:editable="false"
        android:inputType="textNoSuggestions"
        android:focusable="false"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/usrbtn"
        android:text="Change User Settings"
        android:textAlignment="center"
        android:layout_below="@+id/userpic"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:editable="false"
        android:clickable="true"
        android:inputType="textNoSuggestions"
        android:focusable="false"
        android:focusableInTouchMode="true"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:id="@+id/userpic"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="150dp"
        android:layout_marginRight="150dp"
        android:src="@drawable/user"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="No Chosen Mirror"
        android:ems="10"
        android:id="@+id/mirrortext"
        android:background="@android:color/transparent"
        android:layout_below="@+id/usrbtn"
        android:layout_toRightOf="@+id/imageView"
        android:editable="false"
        android:clickable="false"
        android:focusable="false"
        android:layout_alignRight="@+id/usrbtn"
        android:layout_alignEnd="@+id/usrbtn"
        android:layout_marginLeft="6dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/mirrorbtn"
        android:text="           Change Mirror ID"
        android:layout_below="@+id/mirrortext"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:editable="false"
        android:clickable="true"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:inputType="textNoSuggestions"
        />


</RelativeLayout>