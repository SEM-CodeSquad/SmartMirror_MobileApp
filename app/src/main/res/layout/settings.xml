<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent" android:layout_height="fill_parent"
    android:background="@drawable/backgroundsettings">


    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/imageView"
        android:src="@drawable/qrcode"
        android:editable="false"
        android:clickable="false"
        android:focusable="false"
        android:layout_alignTop="@+id/mirrortext"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="16dp"
        />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/imageView2"
        android:src="@drawable/news"
        android:layout_alignTop="@+id/newstext"
        android:layout_alignLeft="@+id/imageView"
        android:layout_alignStart="@+id/imageView" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="No Chosen News"
        android:ems="10"
        android:id="@+id/newstext"
        android:background="@android:color/transparent"
        android:editable="false"
        android:clickable="false"
        android:focusable="false"
        android:layout_below="@+id/mirrorbtn"
        android:layout_alignLeft="@+id/mirrortext"
        android:layout_alignStart="@+id/mirrortext"
        android:layout_marginTop="20dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/busimage"
        android:src="@drawable/bus"
        android:background="@android:color/transparent"
        android:layout_alignTop="@+id/bustext"
        android:layout_alignLeft="@+id/imageView2"
        android:layout_alignStart="@+id/imageView2" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="No Chosen City"
        android:ems="10"
        android:id="@+id/citytext"
        android:background="@android:color/transparent"
        android:editable="false"
        android:clickable="false"
        android:focusable="false"
        android:layout_below="@+id/busbtn"
        android:layout_alignLeft="@+id/bustext"
        android:layout_alignStart="@+id/bustext"
        android:layout_marginTop="20dp" />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:id="@+id/imageView4"
        android:src="@drawable/weather"
        android:background="@android:color/transparent"
        android:layout_below="@+id/busbtn"
        android:layout_toLeftOf="@+id/busbtn"
        android:layout_toStartOf="@+id/busbtn"
        android:layout_marginTop="10dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="No Chosen Stop"
        android:ems="10"
        android:id="@+id/bustext"
        android:background="@android:color/transparent"
        android:editable="false"
        android:clickable="false"
        android:focusable="false"
        android:layout_below="@+id/newsbtn"
        android:layout_alignLeft="@+id/newstext"
        android:layout_alignStart="@+id/newstext"
        android:layout_marginTop="20dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/weatherchange"
        android:text="Change Weather City"
        android:layout_below="@+id/citytext"
        android:editable="false"
        android:clickable="true"
        style="@android:style/Widget.Button"
        android:inputType="textNoSuggestions"
        android:focusable="false"
        android:layout_alignLeft="@+id/busbtn"
        android:layout_alignStart="@+id/busbtn"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="16dp"
        android:focusableInTouchMode="false"
        android:textAlignment="viewStart"
        android:layout_marginTop="5dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/busbtn"
        android:text="Change Bus Stop"
        android:clickable="true"
        android:editable="false"
        style="@android:style/Widget.Button"
        android:inputType="textNoSuggestions"
        android:focusable="false"
        android:layout_below="@+id/bustext"
        android:layout_toRightOf="@+id/busimage"
        android:layout_marginLeft="5dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="16dp"
        android:focusableInTouchMode="false"
        android:textAlignment="viewStart"
        android:layout_marginTop="5dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/newsbtn"
        android:text="Change News"
        android:layout_below="@+id/newstext"
        android:clickable="true"
        android:editable="false"
        style="@android:style/Widget.Button"
        android:inputType="textNoSuggestions"
        android:focusable="false"
        android:layout_toRightOf="@+id/imageView2"
        android:layout_marginLeft="5dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="16dp"
        android:focusableInTouchMode="false"
        android:textAlignment="viewStart"
        android:layout_marginTop="5dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:id="@+id/userpic"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="150dp"
        android:layout_marginRight="150dp"
        android:src="@drawable/user"/>

    <ImageView
        android:layout_width="100dp"
        android:layout_height="3dp"
        android:id="@+id/imageView10"
        android:background="@drawable/middleline"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="false"
        android:layout_above="@+id/imageView2"
        android:layout_below="@+id/mirrorbtn"
        android:layout_alignRight="@+id/newstext"
        android:layout_alignEnd="@+id/newstext"
        android:layout_marginTop="9dp"
        android:layout_marginBottom="9dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="2dp"
        android:id="@+id/imageView11"
        android:background="@drawable/middleline"
        android:layout_alignLeft="@+id/busimage"
        android:layout_alignStart="@+id/busimage"
        android:layout_below="@+id/newsbtn"
        android:layout_alignRight="@+id/imageView10"
        android:layout_alignEnd="@+id/imageView10"
        android:layout_marginTop="8dp" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="2dp"
        android:id="@+id/imageView12"
        android:background="@drawable/middleline"
        android:layout_alignLeft="@+id/imageView4"
        android:layout_alignStart="@+id/imageView4"
        android:layout_alignTop="@+id/imageView4"
        android:layout_alignRight="@+id/imageView11"
        android:layout_alignEnd="@+id/imageView11" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="2dp"
        android:id="@+id/imageView14"
        android:background="@drawable/middleline"
        android:layout_alignLeft="@+id/imageView4"
        android:layout_alignStart="@+id/imageView4"
        android:layout_below="@+id/weatherchange"
        android:layout_alignRight="@+id/imageView12"
        android:layout_alignEnd="@+id/imageView12"
        android:layout_marginTop="7dp" />

    <Button
        android:text="Update settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView14"
        android:layout_alignStart="@+id/weatherchange"
        android:layout_marginTop="17dp"
        android:id="@+id/storeindb"
        android:layout_alignEnd="@+id/imageView14"
        style="@android:style/Widget.Button"
        android:textAlignment="center" />

    <Button
        android:layout_width="wrap_content"
        android:id="@+id/mirrorbtn"
        android:text="Change Mirror"
        android:clickable="true"
        android:editable="false"
        style="@android:style/Widget.Button"
        android:inputType="textNoSuggestions"
        android:focusable="false"
        android:layout_marginRight="16dp"
        android:layout_height="wrap_content"
        android:focusableInTouchMode="false"
        android:textAlignment="viewStart"
        android:layout_below="@+id/mirrortext"
        android:layout_alignStart="@+id/newsbtn"
        android:layout_marginTop="10dp"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="none"
        android:text="No Chosen Mirror"
        android:ems="10"
        android:id="@+id/mirrortext"
        android:background="@android:color/transparent"
        android:editable="false"
        android:clickable="false"
        android:focusable="false"
        android:textSize="12dp"
        android:layout_below="@+id/imageView13"
        android:layout_alignStart="@+id/mirrorbtn"
        android:layout_marginTop="10dp"
        android:layout_alignEnd="@+id/mirrorbtn" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:id="@+id/usernameSett"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        android:layout_below="@+id/userpic" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="10dp"
        android:id="@+id/imageView13"
        android:background="@drawable/middleline"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/usernameSett"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />


</RelativeLayout>
</ScrollView>