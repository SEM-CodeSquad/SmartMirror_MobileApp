<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <Button
        android:id="@+id/buttongreen"
        android:layout_width="108dp"
        android:layout_height="65dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_gravity="right"
        android:layout_marginRight="10dp"
        android:layout_marginTop="54dp"
        android:background="#fafafc"
        android:backgroundTint="#7ab94e"
        android:text="Green" />

    <ImageView
        android:id="@+id/ImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/buttongreen"
        android:layout_marginTop="10dp"
        android:scaleType="fitXY"
        android:src="@mipmap/bluepost" />

    <EditText
        android:id="@+id/typedText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/titletext"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="@null"
        android:capitalize="sentences"
        android:ems="13"
        android:inputType="textMultiLine|textNoSuggestions"
        android:maxLength="250"
        android:text="Write your tasks here"
        android:textStyle="normal" />

    <EditText
        android:id="@+id/titletext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/ImageView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="53dp"
        android:background="@null"
        android:capitalize="sentences"
        android:ems="10"
        android:inputType="textMultiLine|textNoSuggestions"
        android:maxLength="16"
        android:text="Task Name"
        android:textAlignment="center"
        android:textSize="22dp"
        android:textStyle="normal" />

    <Button
        android:id="@+id/buttonblue"
        android:layout_width="108dp"
        android:layout_height="65dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/buttonyellow"
        android:layout_gravity="right"
        android:layout_marginLeft="10dp"
        android:background="#fafafc"
        android:backgroundTint="#4aa0e1"
        android:text="Blue" />

    <Button
        android:id="@+id/buttonyellow"
        android:layout_width="108dp"
        android:layout_height="65dp"
        android:layout_alignTop="@+id/buttongreen"
        android:layout_centerHorizontal="true"
        android:layout_gravity="right"
        android:background="#fafafc"
        android:backgroundTint="#f1ed22"
        android:text="Yellow" />

    <ImageButton
        android:id="@+id/checkmark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/buttongreen"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/buttongreen"
        android:layout_marginBottom="35dp"
        android:layout_marginLeft="25dp"
        android:layout_toEndOf="@+id/titletext"
        android:background="@null"
        android:src="@mipmap/checkmark" />


</RelativeLayout>